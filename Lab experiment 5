package inheritance;    
public class Shape {     
public double area() {  
System.out.println("Default area method in Shape");  
return 0.0;  
}  
public static void main(String[] args) {  
System.out.println ("JAGANNATHAN S");   
System.out.println("2117240070120");  
Shape tc1 = new Circle(5);         
tc1.area();   
Shape tc2 = new Rectangle(10, 5);  
tc2.area();   
Shape tc3 = new Shape();  
tc3.area();   
Shape tc4 = new Circle(0);         
tc4.area();   
Shape tc5 = new Rectangle(10, 0);  
tc5.area();   
}  
}  
class Circle extends Shape {     
private double radius;     public 
Circle(double radius) {         
this.radius = radius;  
}  
@Override     public double area() {         
double result = Math.PI * radius * radius;         
if (radius <= 0) {  
System.out.println("Circle Area: 0");             
return 0.0;  
}  
System.out.printf("Circle Area: %.1f%n", result);         
return result;  
}  
}  
